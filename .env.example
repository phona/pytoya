# Environment variables for PyToYa
# Copy this file to .env and fill in your values

# LLM API Key (preferred for non-OpenAI providers)
LLM_API_KEY=your-llm-api-key-here

# OpenAI API Key (if using OpenAI provider)
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Custom OpenAI base URL
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: PaddleOCR-VL service URL (overrides config.yaml)
# PADDLEOCR_VL_BASE_URL=http://localhost:8080

# Docker development services
POSTGRES_USER=pytoya_user
POSTGRES_PASSWORD=pytoya_pass
POSTGRES_DB=pytoya
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
REDIS_HOST=localhost
REDIS_PORT=6379

# App runtime
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3000

# API service (NestJS)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=pytoya_user
DB_PASSWORD=pytoya_pass
DB_DATABASE=pytoya
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRATION=7d
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me
PADDLEOCR_BASE_URL=http://localhost:8080
PADDLEOCR_TIMEOUT=120000
OCR_MAX_RETRIES=3

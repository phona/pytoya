{
  "name": "pytoya",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "src/apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" --names \"api,web\"",
    "dev:api": "npm run start:dev --workspace=@pytoya/api",
    "dev:web": "npm run dev --workspace=@pytoya/web",
    "dev:api:watch": "npm run start:dev --workspace=@pytoya/api",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test --workspaces --if-present -- --watch",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rm -rf node_modules **/node_modules **/dist",
    "install:all": "npm install && npm install --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.23",
    "@types/node": "20.11.30",
    "concurrently": "8.2.2",
    "es-abstract": "^1.24.1",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "lodash": "^4.17.21"
  }
}

{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    "plugins": [{ "name": "next" }],
    "paths": {
      "@pytoya/api/*": ["src/apps/api/src/*"],
      "@pytoya/web/*": ["src/apps/web/*"],
      "@pytoya/common/*": ["src/apps/common/src/*"],
      "@/*": ["src/apps/web/*"],
      "components/*": ["src/apps/web/components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

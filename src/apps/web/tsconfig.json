{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "incremental": true,
    "noEmit": true,
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "@pytoya/api/*": [
        "src/apps/api/src/*"
      ],
      "@pytoya/web/*": [
        "src/apps/web/*"
      ],
      "@pytoya/common/*": [
        "src/apps/common/src/*"
      ],
      "@/*": [
        "src/apps/web/src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
